<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"    
    android:orientation="vertical"
    >

    <TextView 
        android:id="@+id/vote_name_text_view" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Large"
        android:hint="Žiadne hlasovanie"
        />
    
    <TextView 
        android:id="@+id/vote_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nie je k dispozícii žiadna hlasovacia otázka"
        />
    
	<LinearLayout android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    >
	    <TextView 
	        android:id="@+id/vote_yes_button"
	        android:clickable="true" 
	        android:text="Som za"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:onClick="onYesClick"
	        android:background="#FF4444"
	        android:gravity="center"
	    	android:paddingTop="20dp"
	    	android:paddingBottom="20dp"
	        />
	    <TextView 
	        android:id="@+id/vote_no_button"
	        android:clickable="true" 
	        android:text="Som proti"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:onClick="onNoClick"
	        android:background="#99CC00"
	        android:gravity="center"
	    	android:paddingTop="20dp"
	    	android:paddingBottom="20dp"
	        />
	</LinearLayout>
	
	
</LinearLayout>
